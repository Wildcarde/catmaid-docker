map $http_x_forwarded_proto $proxy_x_forwarded_proto {
  default $http_x_forwarded_proto;
  ''      $scheme;
}

upstream django {
    server app:8000;
}

server {
    listen 80;

    charset     utf-8;

    location /static/ {
        alias /static/;
    }

    location / {
        uwsgi_pass      django;
        include         uwsgi_params;
    }
}
